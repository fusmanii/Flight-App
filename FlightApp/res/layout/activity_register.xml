<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="b07.flightapp.RegisterActivity"
    android:background="#2ac2fd" >

<ScrollView 
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

<RelativeLayout
    android:layout_width="305dp"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="b07.flightapp.RegisterActivity" >

    <EditText
        android:id="@+id/get_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/get_first_name"
        android:layout_below="@+id/get_first_name"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="@string/last_name"
        android:inputType="textPersonName"
        android:textColorHint="#f6f9fb" />

    <EditText
        android:id="@+id/get_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/get_last_name"
        android:layout_below="@+id/get_last_name"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:textColorHint="#f6f9fb" />

    <EditText
        android:id="@+id/get_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/get_email"
        android:layout_below="@+id/get_email"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:hint="@string/address"
        android:inputType="textPostalAddress"
        android:textColorHint="#f6f9fb" />

    <EditText
        android:id="@+id/get_credit_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/get_credit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="@string/credit_format"
        android:inputType="number"
        android:textColorHint="#f6f9fb" />

    <TextView
        android:id="@+id/get_credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/get_address"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:text="@string/credit_num" />

    <TextView
        android:id="@+id/expiry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/get_credit"
        android:layout_below="@+id/get_credit_num"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:text="@string/expiry_date" />

    <EditText
        android:id="@+id/get_expiry_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/get_credit_num"
        android:layout_below="@+id/expiry"
        android:ems="10"
        android:inputType="date"
        android:hint="@string/expiry_format"
        android:textColorHint="#f6f9fb" />

    <EditText
        android:id="@+id/get_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/get_credit_num"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="@string/first_name"
        android:inputType="textPersonName"
        android:textColorHint="#f6f9fb" />
    
    <EditText
        android:id="@+id/get_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/get_first_name"
        android:layout_below="@+id/get_expiry_date"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="@string/username"
        android:inputType="textPersonName"
        android:textColorHint="#f6f9fb" />

    <EditText
        android:id="@+id/get_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/get_first_name"
        android:layout_below="@+id/get_username"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textColorHint="#f6f9fb" />
    
    <EditText
        android:id="@+id/get_password_con"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/get_first_name"
        android:layout_below="@+id/get_password"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="@string/password_con"
        android:inputType="textPassword"
        android:textColorHint="#f6f9fb" />

    <CheckBox
        android:id="@+id/is_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/get_credit"
        android:layout_below="@+id/get_password_con"
        android:layout_marginLeft="15dp"
        android:text="@string/admin" />
    
    <EditText
        android:id="@+id/get_admin_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/get_first_name"
        android:layout_below="@+id/is_admin"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="@string/admin_pass"
        android:inputType="textPassword"
        android:textColorHint="#f6f9fb" />
    
    <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/get_first_name"
        android:layout_below="@+id/get_admin_pass"
        android:layout_marginTop="24dp"
        android:background="@android:drawable/btn_default"
        android:ems="10"
        android:text="@string/register"
        android:onClick="registerClient" />
    
    
    
</RelativeLayout>
</ScrollView>
</RelativeLayout>