<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#2ac2fd"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="b07.flightapp.EditPersonalInfoActivity" >

<ScrollView
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

<RelativeLayout
    android:layout_width="305dp"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="b07.flightapp.EditPersonalInfoActivityActivity" >

     <TextView
        android:id="@+id/first_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:text="@string/first_name" />

     <EditText
         android:id="@+id/get_first_name"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/first_name"
         android:layout_below="@+id/first_name"
         android:ems="10"
         android:inputType="textPersonName" />
     
      <TextView
        android:id="@+id/last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/first_name"
        android:layout_below="@+id/get_first_name"
        android:layout_marginTop="18dp"
        android:text="@string/last_name" />
      
      <EditText
        android:id="@+id/get_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/first_name"
        android:layout_below="@+id/last_name"
        android:ems="10"
        android:inputType="textPersonName" />
      
      <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/first_name"
        android:layout_below="@+id/get_last_name"
        android:layout_marginTop="16dp"
        android:text="@string/email" />
      
      <EditText
        android:id="@+id/get_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/first_name"
        android:layout_below="@+id/email"
        android:ems="10"
        android:inputType="textEmailAddress" />
      
      <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/first_name"
        android:layout_below="@+id/get_email"
        android:layout_marginTop="20dp"
        android:text="@string/address" />
      
      <EditText
        android:id="@+id/get_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/first_name"
        android:layout_below="@+id/address"
        android:ems="10"
        android:inputType="textPostalAddress" />
      
      <TextView
        android:id="@+id/credit_card_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/first_name"
        android:layout_below="@+id/get_address"
        android:layout_marginTop="20dp"
        android:text="@string/credit_num" />
      
      <EditText
        android:id="@+id/get_credit_card_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/first_name"
        android:layout_below="@+id/credit_card_num"
        android:ems="10"
        android:inputType="number" />
      
      <TextView
        android:id="@+id/expiry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/first_name"
        android:layout_below="@+id/get_credit_card_num"
        android:layout_marginTop="20dp"
        android:text="@string/expiry" />
      
      <EditText
        android:id="@+id/get_expiry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/first_name"
        android:layout_below="@+id/expiry"
        android:ems="10"
        android:inputType="date" />
      
      <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/first_name"
        android:layout_below="@+id/get_expiry"
        android:layout_marginBottom="20dp"
        android:text="@string/username" />
      
      <EditText
        android:id="@+id/get_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/first_name"
        android:layout_below="@+id/username"
        android:ems="10"
        android:inputType="textPersonName" />
      
      <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/first_name"
        android:layout_below="@+id/get_username"
        android:layout_marginBottom="20dp"
        android:text="@string/password" />
      
      <EditText
        android:id="@+id/get_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/first_name"
        android:layout_below="@+id/password"
        android:ems="10"
        android:inputType="textPassword"  />
      
      <TextView
        android:id="@+id/password_con"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/first_name"
        android:layout_below="@+id/get_password"
        android:layout_marginBottom="20dp"
        android:text="@string/password_con" />
      
      <EditText
        android:id="@+id/get_password_con"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/first_name"
        android:layout_below="@+id/password_con"
        android:ems="10"
        android:inputType="textPassword"  />
      
       <Button
        android:id="@+id/finishEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/get_password_con"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:background="@android:drawable/btn_default"
        android:onClick="save"
        android:text="@string/save" />
      
     
     
     

</RelativeLayout>
</ScrollView>
</RelativeLayout>
