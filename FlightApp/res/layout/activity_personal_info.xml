<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2ac2fd" >


	<RelativeLayout 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:background="#2ac2fd"
    	android:paddingBottom="@dimen/activity_vertical_margin"
    	android:paddingLeft="@dimen/activity_horizontal_margin"
    	android:paddingRight="@dimen/activity_horizontal_margin"
    	android:paddingTop="@dimen/activity_vertical_margin" >
    	
	<ScrollView
    	android:id="@+id/ScrollView01"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:layout_centerVertical="true" >

	

	<RelativeLayout
    android:layout_width="305dp"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/first_name"
        android:layout_below="@+id/last_name"
        android:layout_marginTop="18dp"
        android:text="@string/email" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/first_name"
        android:layout_below="@+id/email"
        android:layout_marginTop="18dp"
        android:text="@string/address" />

    <TextView
        android:id="@+id/credit_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/first_name"
        android:layout_below="@+id/address"
        android:layout_marginTop="18dp"
        android:text="@string/credit_num" />

    <TextView
        android:id="@+id/expiry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/first_name"
        android:layout_below="@+id/credit_num"
        android:layout_marginTop="18dp"
        android:text="@string/expiry" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/first_name"
        android:layout_below="@+id/expiry"
        android:layout_marginTop="18dp"
        android:text="@string/username" />

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/first_name"
        android:layout_below="@+id/username"
        android:layout_marginTop="18dp"
        android:text="@string/password" />

    <Button
        android:id="@+id/edit_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/first_name"
        android:layout_below="@+id/password"
        android:background="@android:drawable/btn_default"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:onClick="editInfo"
        android:text="@string/edit_info" />

    <TextView
        android:id="@+id/last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/first_name"
        android:layout_marginTop="38dp"
        android:text="@string/last_name" />

    <TextView
        android:id="@+id/first_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/textinputborder"
        android:layout_alignBaseline="@+id/first_name"
        android:layout_alignBottom="@+id/first_name"
        android:layout_alignRight="@+id/first_name"
        android:layout_toRightOf="@+id/last_name" />

    <TextView
        android:id="@+id/last_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/email"
        android:background="@drawable/textinputborder"
        android:layout_alignLeft="@+id/first_name_txt"
        android:layout_alignRight="@+id/first_name" />

    <TextView
        android:id="@+id/email_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/address"
        android:background="@drawable/textinputborder"
        android:layout_alignRight="@+id/first_name"
        android:layout_toRightOf="@+id/expiry" />

    <TextView
        android:id="@+id/address_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/credit_num"
        android:background="@drawable/textinputborder"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/address" />

    <TextView
        android:id="@+id/credit_card_num_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/credit_num"
        android:layout_alignRight="@+id/first_name"
        android:background="@drawable/textinputborder"
        android:layout_toRightOf="@+id/credit_num" />

    <TextView
        android:id="@+id/expiry_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/expiry"
        android:layout_alignLeft="@+id/email_txt"
        android:background="@drawable/textinputborder"
        android:layout_alignRight="@+id/first_name" />

    <TextView
        android:id="@+id/username_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/username"
        android:layout_alignBottom="@+id/username"
        android:layout_alignLeft="@+id/last_name_txt"
        android:background="@drawable/textinputborder"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/password_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/password"
        android:layout_alignLeft="@+id/username_txt"
        android:background="@drawable/textinputborder"
        android:layout_alignRight="@+id/first_name" />

    <TextView
        android:id="@+id/first_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/last_name"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:text="@string/first_name" />

</RelativeLayout>
</ScrollView>
</RelativeLayout>


<ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#111"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" />

</android.support.v4.widget.DrawerLayout>

